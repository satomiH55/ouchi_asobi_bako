<div class="cover-new"> 
  <div class="container d-flex flex-column align-items-center">
    <div class="row mt-5">
      <h1 class="font-weight-normal">あそび新規投稿</h1>
    </div>
    <div class="row mt-5">
      <%= form_with model: @post, local: true do |f| %>
        <div class="form-group mb-3">
          <label class="form-label">【あそびの名前】</label>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group mb-3">
          <label class="form-label">【対象年齢】</label>
          <%= f.text_field :age_group, class: "form-control" %>
        </div>
        <div class="form-group mb-3">
          <label class="form-label">【必要な道具】</label>
          <%= f.text_area :location, rows: 5, class: "form-control" %>
        </div>
        <div class="form-group mb-3">
          <label class="form-label">【あそびの手順】</label>
          <%= f.text_area :step, rows: 10, class: "form-control" %>
        </div>
        <div class="form-group mb-3">
          <label class="form-label">【画像】</label><br>
          <%= f.file_field :image %>
        </div>
        <%= f.submit '投稿する', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
