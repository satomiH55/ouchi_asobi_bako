<div class="cover-user-edit"> 
  <div class="container d-flex flex-column align-items-center">
    <div class="row mt-5">
      <h1 class="font-weight-normal">プロフィール編集</h1>
    </div>
    
    <!-- エラーメッセージ表示 -->
    <% if @user.errors.any? %>
      <div class="card text-center text-white bg-danger mt-3">
        <%= @user.errors.count %>件のエラーが発生しました
        <% @user.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
    <% end %>
    <!-- ここまでエラーメッセージ表示 -->
    
    <div class="row mt-5">
      <%= form_with model: @user, local: true do |f| %>
        <div class="form-group">
          <label class="form-label">名前</label>
          <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前", class: "form-control" %>
        </div>
        <div class="form-group">
          <label class="form-label">プロフィール画像</label><br>
          <%= attachment_image_tag @user, :profile_image, size: '100x100', fallback: "no_image.svg", class: "mb-3 profile-img" %><br>
          <%= f.file_field :profile_image %>
        </div>
        <div class="form-group">
          <label class="form-label">プロフィール</label>
          <%= f.text_field :profile, class: "form-control" %><br>
        </div>
         <!-- ボタンの配置 -->
        <div class="d-flex justify-content-between">
          <%= f.submit '保存する', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>